{
  "css.validate": false,
  "editor.formatOnSave": true,
  "prettier.useEditorConfig": true,
  "prettier.singleQuote": true,
  "typescript.preferences.quoteStyle": "single",
  "html.completion.attributeDefaultValue": "doublequotes",
  "eslint.options": {
    "extensions": [".js", ".jsx", ".md", ".mdx", ".ts", ".tsx"]
  },
  "eslint.validate": [
    "markdown",
    "mdx",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ]
}
